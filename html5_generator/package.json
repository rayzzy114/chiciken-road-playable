{
  "name": "html5-playable-bot-grammy",
  "version": "3.0.1",
  "description": "Telegram bot for generating Playable Ads (GrammY + Prisma ORM)",
  "type": "module",
  "main": "src/bot.ts",
  "scripts": {
    "start": "node dist/bot.js",
    "start:src": "node --loader ts-node/esm --experimental-specifier-resolution=node src/bot.ts",
    "build": "tsc -p tsconfig.json",
    "build:all": "npm run build && npm --prefix admin run build",
    "test": "vitest run",
    "db:push": "prisma db push",
    "postinstall": "prisma generate",
    "dev:bot": "nodemon --watch src --ext ts,json --exec \"node --loader ts-node/esm --experimental-specifier-resolution=node\" src/bot.ts",
    "dev:admin": "npm --prefix admin run dev",
    "dev": "concurrently -k -n bot,admin -c cyan,magenta \"npm run dev:bot\" \"npm run dev:admin\""
  },
  "dependencies": {
    "@grammyjs/conversations": "^2.1.1",
    "@grammyjs/storage-file": "^2.5.1",
    "@prisma/client": "^6.19.2",
    "basic-auth": "^2.0.1",
    "debug": "^4.4.3",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "fs-extra": "^11.3.0",
    "grammy": "^1.39.3"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.1",
    "nodemon": "^3.1.11",
    "prisma": "^6.19.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.9",
    "concurrently": "^9.2.1"
  }
}
